{
"entries": [
    {
    "term": "align-items",
    "definition": "Defines the default alignment for items inside a flex container along the cross axis.",
    "syntax": "align-items: flex-start | flex-end | center | baseline | stretch;",
    "example": ".container {\n  display: flex;\n  align-items: center;\n}",
    "source": "https://developer.mozilla.org/en-US/docs/Web/CSS/align-items",
    "difficulty": "medium"
    },
    {
    "term": "background-color",
    "definition": "Sets the background color of an element.",
    "syntax": "background-color: <color>;",
    "example": "body {\n  background-color: #f0f0f0;\n}",
    "source": "https://developer.mozilla.org/en-US/docs/Web/CSS/background-color",
    "difficulty": "easy"
    },
    {
    "term": "border-radius",
    "definition": "Defines the radius of the element's corners to make them rounded.",
    "syntax": "border-radius: <length> | <percentage>;",
    "example": ".button {\n  border-radius: 8px;\n}",
    "source": "https://developer.mozilla.org/en-US/docs/Web/CSS/border-radius",
    "difficulty": "easy"
    },
    {
    "term": "box-shadow",
    "definition": "Applies one or more shadows to an element.",
    "syntax": "box-shadow: <offset-x> <offset-y> <blur-radius> <spread-radius> <color>;",
    "example": ".card {\n  box-shadow: 0 4px 6px rgba(0,0,0,0.1);\n}",
    "source": "https://developer.mozilla.org/en-US/docs/Web/CSS/box-shadow",
    "difficulty": "medium"
    },
    {
    "term": "display",
    "definition": "Specifies how an element is displayed in the layout (block, inline, flex, grid, etc.).",
    "syntax": "display: block | inline | flex | grid | none | ...;",
    "example": ".container {\n  display: flex;\n}",
    "source": "https://developer.mozilla.org/en-US/docs/Web/CSS/display",
    "difficulty": "easy"
    },
    {
    "term": "flex-direction",
    "definition": "Specifies the direction of the flexible items inside a flex container.",
    "syntax": "flex-direction: row | row-reverse | column | column-reverse;",
    "example": ".container {\n  display: flex;\n  flex-direction: column;\n}",
    "source": "https://developer.mozilla.org/en-US/docs/Web/CSS/flex-direction",
    "difficulty": "medium"
    },
    {
    "term": "font-size",
    "definition": "Sets the size of the font.",
    "syntax": "font-size: <length> | <percentage> | small | medium | large | ...;",
    "example": "p {\n  font-size: 16px;\n}",
    "source": "https://developer.mozilla.org/en-US/docs/Web/CSS/font-size",
    "difficulty": "easy"
    },
    {
    "term": "grid-template-columns",
    "definition": "Defines the number and size of columns in a CSS grid layout.",
    "syntax": "grid-template-columns: <track-size> <track-size> ...;",
    "example": ".grid-container {\n  display: grid;\n  grid-template-columns: 1fr 2fr 1fr;\n}",
    "source": "https://developer.mozilla.org/en-US/docs/Web/CSS/grid-template-columns",
    "difficulty": "medium"
    },
    {
    "term": "justify-content",
    "definition": "Aligns flex or grid items along the main axis.",
    "syntax": "justify-content: flex-start | flex-end | center | space-between | space-around | space-evenly;",
    "example": ".container {\n  display: flex;\n  justify-content: space-between;\n}",
    "source": "https://developer.mozilla.org/en-US/docs/Web/CSS/justify-content",
    "difficulty": "medium"
    },
    {
    "term": "margin",
    "definition": "Sets the space outside the element's border.",
    "syntax": "margin: <length> | <percentage> | auto;",
    "example": ".box {\n  margin: 20px;\n}",
    "source": "https://developer.mozilla.org/en-US/docs/Web/CSS/margin",
    "difficulty": "easy"
    }
]
}
